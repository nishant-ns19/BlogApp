<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgstyle"
    tools:context=".SinglePostActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_margin="10dp"
        >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="fitCenter"
        android:background="#fff"
        android:id="@+id/singleImageview"/>

    <TextView
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/singleTitle"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"

        android:textSize="30sp"
        android:background="#092E7A"
        android:textColor="#B2BCF0"/>

    <TextView
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#092E7A"
        android:fontFamily="casual"
        android:id="@+id/singleDesc"
        android:textColor="#8BBEE7"
        android:scrollbars="vertical"
        android:textSize="20sp"

        />

        <TextView
            android:id="@+id/singleUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#000"
            android:fontFamily="casual"
            android:textAlignment="textEnd"

            android:textColor="#F7042C"
            android:textSize="25sp"
            android:textStyle="bold" />


        <Button
        android:id="@+id/deleteBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="delete post"
        android:background="#abc"
        android:textColor="#fff"
        android:textStyle="bold"/>
    </LinearLayout>

</ScrollView>